.doctor-header .doctor-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.doctor-subtitle {
  display: block;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.chat-scroll {
  height: 60vh;
  margin-bottom: 20rpx;
}

.message-row {
  display: flex;
  margin-bottom: 16rpx;
}

.message-row.from-user {
  justify-content: flex-end;
}

.message-row.from-doctor {
  justify-content: flex-start;
}

.message-bubble {
  max-width: 75%;
  padding: 16rpx 20rpx;
  border-radius: 20rpx;
  background-color: #f5f5f5;
}

.from-user .message-bubble {
  background-color: #e8f5e9;
}

.message-text {
  font-size: 28rpx;
  color: #333;
}

.message-time {
  display: block;
  margin-top: 4rpx;
  font-size: 22rpx;
  color: #999;
  text-align: right;
}

.chat-input-bar {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.chat-input {
  flex: 1;
  padding: 14rpx 20rpx;
  border-radius: 30rpx;
  background-color: #f5f5f5;
  font-size: 28rpx;
  margin-right: 12rpx;
}

.send-btn {
  min-width: 120rpx;
  padding: 0 20rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  border-radius: 30rpx;
  background-color: #4CAF50;
  color: #fff;
  font-size: 28rpx;
}

