.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.mode-switch {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.mode-text {
  font-size: 28rpx;
  color: #666;
}

.doctor-list {
  margin-bottom: 40rpx;
}

.doctor-card {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.doctor-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
}

.doctor-info {
  flex: 1;
}

.doctor-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.doctor-title {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.doctor-hospital {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.doctor-specialties {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.doctor-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.doctor-rating {
  font-size: 24rpx;
  color: #ff9800;
}

.doctor-fee {
  font-size: 24rpx;
  color: #4CAF50;
}

.doctor-status {
  display: flex;
  align-items: center;
}

.status-text {
  font-size: 24rpx;
  padding: 5rpx 15rpx;
  border-radius: 15rpx;
}

.status-text.online {
  background-color: #e8f5e8;
  color: #4CAF50;
}

.status-text.offline {
  background-color: #f5f5f5;
  color: #999;
}

.consult-btn {
  width: 120rpx;
  height: 60rpx;
  background-color: #4CAF50;
  color: white;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.consultation-history {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.history-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.consult-date {
  font-size: 24rpx;
  color: #999;
}

.consult-summary {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}
