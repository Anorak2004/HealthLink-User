.article-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.article-meta {
  margin-top: 8rpx;
  display: flex;
  justify-content: space-between;
}

.article-meta-text {
  font-size: 24rpx;
  color: #999;
}

.content-paragraph {
  margin-bottom: 16rpx;
}

.content-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.image-row {
  margin-top: 16rpx;
}

.article-image {
  width: 100%;
  border-radius: 12rpx;
}

.image-caption {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #666;
}

