.search-input {
  margin-top: 20rpx;
  padding: 16rpx 24rpx;
  border-radius: 40rpx;
  background-color: #f5f5f5;
  font-size: 28rpx;
}

.category-scroll {
  margin-top: 20rpx;
  white-space: nowrap;
}

.category-chip {
  display: inline-block;
  padding: 10rpx 24rpx;
  margin-right: 16rpx;
  border-radius: 999rpx;
  background-color: #f0f0f0;
  font-size: 26rpx;
  color: #666;
}

.category-chip.active {
  background-color: #e8f5e9;
  color: #4CAF50;
}

.article-item {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
}

.article-item:last-child {
  border-bottom: none;
}

.article-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.article-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
}

.article-tag {
  font-size: 24rpx;
  color: #4CAF50;
}

.article-summary {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #666;
}

.article-meta {
  margin-top: 8rpx;
  display: flex;
  justify-content: space-between;
}

.article-meta-text {
  font-size: 24rpx;
  color: #999;
}

