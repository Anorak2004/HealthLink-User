/**health-record.wxss**/
.header {
  text-align: center;
  margin-bottom: 30rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.page-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}

.data-types {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 20rpx;
}

.type-item {
  width: 45%;
  text-align: center;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
}

.type-item.active {
  background: #e8f5e8;
  border-color: #4CAF50;
}

.type-icon {
  width: 50rpx;
  height: 50rpx;
  display: block;
  margin: 0 auto 15rpx;
}

.type-label {
  font-size: 28rpx;
  color: #333;
}

.form {
  margin-top: 20rpx;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  position: relative;
}

.form-label {
  width: 150rpx;
  font-size: 30rpx;
  color: #333;
}

.form-input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 30rpx;
  margin-right: 20rpx;
}

.form-unit {
  font-size: 28rpx;
  color: #666;
  width: 60rpx;
}

.picker-display {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 30rpx;
  background: white;
}

.form-textarea {
  flex: 1;
  min-height: 120rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 30rpx;
}

.submit-btn {
  width: 100%;
  margin-top: 40rpx;
}

.recent-records {
  margin-top: 20rpx;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #eee;
}

.record-item:last-child {
  border-bottom: none;
}

.record-info {
  flex: 1;
}

.record-type {
  font-size: 28rpx;
  color: #666;
  display: block;
}

.record-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-top: 5rpx;
  display: block;
}

.record-time {
  text-align: right;
}

.record-date {
  font-size: 26rpx;
  color: #666;
  display: block;
}

.record-time-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 5rpx;
  display: block;
}
