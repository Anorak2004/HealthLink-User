/**index.wxss**/
.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.user-status {
  margin-top: 10rpx;
}

.status-text {
  font-size: 28rpx;
  color: #666;
}

.status-good {
  color: #4CAF50;
}

.status-warning {
  color: #ff9800;
}

.status-danger {
  color: #f44336;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}

.health-overview {
  text-align: center;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 30rpx;
}

.health-score {
  margin: 30rpx 0;
}

.score-number {
  font-size: 80rpx;
  font-weight: bold;
  color: #4CAF50;
  display: block;
}

.score-label {
  font-size: 28rpx;
  color: #666;
}

.health-indicators {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}

.indicator {
  text-align: center;
}

.indicator-label {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.indicator-value {
  font-size: 28rpx;
  font-weight: bold;
  margin-top: 10rpx;
  display: block;
}

.indicator-value.normal {
  color: #4CAF50;
}

.indicator-value.warning {
  color: #ff9800;
}

.indicator-value.danger {
  color: #f44336;
}

.quick-actions {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.action-item {
  width: 45%;
  text-align: center;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.action-icon {
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin: 0 auto 15rpx;
}

.action-text {
  font-size: 28rpx;
  color: #333;
}

.reminders {
  margin-top: 20rpx;
}

.reminder-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.reminder-item:last-child {
  border-bottom: none;
}

.reminder-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.reminder-content {
  flex: 1;
}

.reminder-title {
  font-size: 30rpx;
  color: #333;
  display: block;
}

.reminder-time {
  font-size: 24rpx;
  color: #666;
  margin-top: 5rpx;
  display: block;
}

.mode-indicator {
  position: fixed;
  bottom: 100rpx;
  right: 30rpx;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.mode-text {
  color: white;
}
