/**profile.wxss**/
.user-card {
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  color: white;
}

.user-header {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
}

.user-info {
  flex: 1;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.user-id {
  font-size: 28rpx;
  opacity: 0.8;
}

.edit-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.stats-card {
  margin-top: 20rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #4CAF50;
  display: block;
}

.stat-label {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}

.menu-card {
  margin-top: 20rpx;
}

.menu-list {
  margin-top: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 30rpx;
  width: 60rpx;
  text-align: center;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.menu-arrow {
  font-size: 32rpx;
  color: #ccc;
}

.mode-card {
  margin-top: 20rpx;
}

.mode-switch {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.mode-label {
  font-size: 32rpx;
  color: #333;
}

.mode-desc {
  font-size: 28rpx;
  color: #666;
}

.logout-section {
  margin-top: 40rpx;
  text-align: center;
}

.logout-btn {
  width: 60%;
}
