<!--settings.wxml-->
<view class="page">
  <view class="header">
    <text class="page-title">设置</text>
  </view>

  <!-- 模式切换 -->
  <view class="card">
    <text class="section-title">开发模式</text>
    <view class="setting-item">
      <view class="setting-info">
        <text class="setting-label">API模式</text>
        <text class="setting-desc">{{isApiMode ? '使用真实API接口' : '使用模拟数据演示'}}</text>
      </view>
      <switch 
        checked="{{isApiMode}}" 
        bindchange="toggleApiMode"
        color="#4CAF50"
      />
    </view>
    <view class="mode-description">
      <text class="desc-text">
        {{isApiMode ? 
          'API模式：连接真实后端服务，获取实时数据。适用于生产环境。' : 
          '模拟模式：使用预设的演示数据，无需后端服务。适用于演示和测试。'
        }}
      </text>
    </view>
  </view>

  <!-- 用户信息 -->
  <view class="card">
    <text class="section-title">用户信息</text>
    <view class="setting-item" bindtap="editProfile">
      <view class="setting-info">
        <text class="setting-label">个人资料</text>
        <text class="setting-desc">编辑姓名、年龄等基本信息</text>
      </view>
      <text class="setting-arrow">></text>
    </view>
  </view>

  <!-- 健康设置 -->
  <view class="card">
    <text class="section-title">健康设置</text>
    <view class="setting-item">
      <view class="setting-info">
        <text class="setting-label">健康提醒</text>
        <text class="setting-desc">开启后会定时推送健康提醒</text>
      </view>
      <switch 
        checked="{{healthReminder}}" 
        bindchange="toggleHealthReminder"
        color="#4CAF50"
      />
    </view>
    <view class="setting-item">
      <view class="setting-info">
        <text class="setting-label">数据同步</text>
        <text class="setting-desc">自动同步健康设备数据</text>
      </view>
      <switch 
        checked="{{dataSync}}" 
        bindchange="toggleDataSync"
        color="#4CAF50"
      />
    </view>
  </view>

  <!-- 隐私设置 -->
  <view class="card">
    <text class="section-title">隐私与安全</text>
    <view class="setting-item" bindtap="showPrivacyPolicy">
      <view class="setting-info">
        <text class="setting-label">隐私政策</text>
        <text class="setting-desc">查看隐私保护政策</text>
      </view>
      <text class="setting-arrow">></text>
    </view>
    <view class="setting-item" bindtap="clearData">
      <view class="setting-info">
        <text class="setting-label">清除数据</text>
        <text class="setting-desc">清除本地存储的健康数据</text>
      </view>
      <text class="setting-arrow">></text>
    </view>
  </view>

  <!-- 关于 -->
  <view class="card">
    <text class="section-title">关于</text>
    <view class="setting-item">
      <view class="setting-info">
        <text class="setting-label">版本信息</text>
        <text class="setting-desc">HealthLink v1.0.0</text>
      </view>
    </view>
    <view class="setting-item" bindtap="contactSupport">
      <view class="setting-info">
        <text class="setting-label">联系客服</text>
        <text class="setting-desc">遇到问题？联系我们</text>
      </view>
      <text class="setting-arrow">></text>
    </view>
  </view>
</view>
